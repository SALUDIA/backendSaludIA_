FROM python:3.10.2-slim

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

WORKDIR /app

# Copiar requirements
COPY requirements.txt .

# Instalar dependencias compatibles
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir numpy==1.24.3 && \
    pip install --no-cache-dir pandas==2.0.3 scipy==1.10.1 && \
    pip install --no-cache-dir scikit-learn==1.3.0 && \
    pip install --no-cache-dir torch==2.0.1 && \
    pip install --no-cache-dir -r requirements.txt && \
    pip cache purge

# Copiar código fuente
COPY . .

# Variables de entorno
ENV FLASK_ENV=production
ENV PYTHONPATH=/app/src
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Usuario no-root
RUN adduser --disabled-password --gecos '' appuser && chown -R appuser /app
USER appuser

# NO especificar puerto fijo
# EXPOSE ${PORT}

# Comando con puerto dinámico
# Al final del Dockerfile:
CMD ["gunicorn", "-c", "gunicorn.conf.py", "app:app"]