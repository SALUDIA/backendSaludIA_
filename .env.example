# ===============================================
# CONFIGURACIÓN DE EJEMPLO PARA SALUDIA BACKEND
# ===============================================
# Copia este archivo como .env y completa con tus credenciales reales

# Entorno
FLASK_ENV=development

# Base de datos LOCAL (desarrollo)
LOCAL_DB_HOST=localhost
LOCAL_DB_NAME=saludiadb
LOCAL_DB_USER=root
LOCAL_DB_PASSWORD=tu_password_local
LOCAL_DB_PORT=3306

# Base de datos AIVEN MySQL (producción)
DB_HOST=tu-servidor.aivencloud.com
DB_USER=tu_usuario_aiven
DB_PASSWORD=tu_password_aiven
DB_NAME=defaultdb
DB_PORT=puerto_aiven

# SSL para Aiven
DB_SSL_REQUIRED=true
DB_SSL_MODE=required

# Base de datos de testing
TEST_DB_HOST=localhost
TEST_DB_NAME=saludiadb_test
TEST_DB_USER=root
TEST_DB_PASSWORD=tu_password_test
TEST_DB_PORT=3306

# Flask
SECRET_KEY=genera_secret_key_de_32_caracteres_minimo
JWT_SECRET_KEY=genera_jwt_secret_diferente_32_chars

# CORS
CORS_ORIGINS=*
LOG_LEVEL=INFO
MODEL_PATH=models/

# Traductor
TRANSLATOR_TIMEOUT=10

# Modelo
MODEL_VERSION=v8